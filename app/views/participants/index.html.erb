<%= csrf_meta_tag %>
<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">


<div class="container-fluid">
  <h1>EduEval</h1>
  <div class="col-md-10 col-md-offset-1 container">



    <div class="col-md-6 liste_participant">
      <ul class="list-group list-group-flush">
        <% @participants.each do |participant| %>
          <li class="list-group-item"><a><%= participant.prenom %> <%= participant.nom %></a></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6 inscription_participant">
      <h4>Si vous ne voyez pas votre nom dans la liste, inscrivez-vous</h4><br/><br/>
      <%= form_for @participants_new do |participant_form| %>
        <div class="form-group">
          <label for="nom">Nom</label>
          <%= participant_form.text_field :nom, class: "col-md-12 form-control", :input_html => { id:'nom' },:required => true%>
        </div>
        <div class="form-group">
          <label for="prenom">Prenom</label>
          <%= participant_form.text_field :prenom, class: "col-md-12 form-control", :input_html => { id:'prenom' },:required => true%>
        </div>
        <button type="submit" class="btn_valider">Valider</button>
        </div>
      <% end %>
      <a class="float-right btn_clq">Commencer le questionnaire ></a>
      </div>

  </div>
</div>


<script>
    var listItems = document.querySelectorAll("ul li");
    listItems.forEach(function(item) {
        item.onclick = function(e) {
            var getNomPrenom = this.innerText;
            p = getNomPrenom.replace(/\s/g, '');
            window.open("/participants?p="+p,"_self");
        }

    });
</script>